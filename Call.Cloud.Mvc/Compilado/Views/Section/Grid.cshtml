@model Call.Cloud.Mvc.Models.SectionVM.ListaSectionVm
@{
    ViewBag.Title = "Grid";
    Layout = "";
}

<div class="page animsition" style="animation-duration: 800ms; opacity: 1;">
    <div class="page-header">
        <strong>List of Secction</strong>
       
        <div class="page-header-actions">
            <button type="button" class="btn btn-sm btn-icon btn-primary btn-round" data-toggle="modal"
                    data-original-title="Nuevo" data-target="#ModalSection" data-id="-1">
                <i class="icon md-sign-in" aria-hidden="true"></i>
            </button>
        </div>

    </div>
    <div class="panel-body">
        <div id="divGridPagina" class="table-responsive">
            @Html.Hidden("items_count", Model.Elementos.Count())
            <table class="table table-striped table-condensed text-center">
                <tr>
                    <th class="text-center col-sm-3">
                        <a class="punteroMouse">Section</a>
                    </th>
                    <th class="text-center col-sm-2">
                        <a class="punteroMouse">Speech</a>
                    </th>
                    <th class="text-center col-sm-2">
                        <a class="punteroMouse">Description</a>
                    </th>
                    <th class="text-center col-sm-3">
                        <a class="punteroMouse">Weight</a>
                    </th>
                    <th class="text-center col-sm-3">
                        <a class="punteroMouse">TMO</a>
                    </th>
                    <th class="text-right col-sm-1">Option</th>
                </tr>

                @for (var i = 0; i < Model.Elementos.Count(); i++)
                {
                    var item = Model.Elementos.ToList()[i];
                    <tr>
                        <td class="text-center col-sm-2">@item.SectionName</td>
                        <td class="text-center col-sm-2">@item.SpeechName</td>
                        <td class="text-center col-sm-2">@item.description</td>
                        <td class="text-center col-sm-1">@item.Weight</td>
                        <td class="text-center col-sm-1">@item.TMO</td>
                        <td class="text-right col-sm-1">

                            <a class="btn btn-sm btn-icon btn-primary btn-round" title="Editar" data-toggle="modal" data-original-title="Editar" data-target="#ModalSection" data-id="@item.PkSection">
                                <i class="icon md-edit" aria-hidden="true"></i>
                            </a>
                            <a class="btn btn-sm btn-icon btn-primary btn-round" title="Eliminar" onclick="eliminar('@item.PkSection')" data-toggle="tooltip"
                               data-original-title="Eliminar">
                                <i class="icon md-delete" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>