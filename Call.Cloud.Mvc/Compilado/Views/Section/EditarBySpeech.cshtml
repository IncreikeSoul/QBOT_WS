@model Call.Cloud.Mvc.Models.SectionVM.EditarSectionVm
@{
    ViewBag.Title = "Section";
    Layout = "";
}
<div class="page-content">
    <div class="panel">
        <div class="panel-body container-fluid">
            <div class="row row-lg">
                <div class="col-sm-12">
                    <div class="example-wrap">                      
                        @using (@Html.BeginForm("EditarBySpeech", "Section", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.Item.PkSection)
                            <div class="form-group form-material">
                                @Html.HiddenFor(model => model.Item.PkSpeech)                                

                                @Html.Label("Name", "Name", htmlAttributes: new { @class = "control-label col-sm-2" })
                                <div class="col-sm-4">
                                    @Html.EditorFor(model => model.Item.SectionName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name", @maxlength = "300",
                                                                                            @onkeypress = "return soloLetras(event)", @onpaste = "return false" } })
                                </div>

                                @Html.Label("Speech", "Speech", htmlAttributes: new { @class = "control-label col-sm-2" })
                                <div class="col-sm-4">
                                    @Html.DropDownListFor(model => model.Item.PkSpeech, Model.Speechs, new { @class = "form-control", @disabled = "disabled" })
                                </div>
                            </div>
                            <div class="form-group form-material">

                                @Html.Label("Weight", "Weight", htmlAttributes: new { @class = "control-label col-sm-2" })
                                <div class="col-sm-4">
                                    @Html.EditorFor(model => model.Item.Weight, new { htmlAttributes = new { @class = "form-control", @placeholder = "Weight", @maxlength = "10", @onkeypress = "return soloNumeros(event)", @onpaste = "return false" } })
                                </div>
                                @Html.Label("TMO", "TMO", htmlAttributes: new { @class = "control-label col-sm-2" })
                                <div class="col-sm-4">
                                    @Html.EditorFor(model => model.Item.TMO, new { htmlAttributes = new { @class = "form-control", @placeholder = "TMO", @onkeypress = "return soloNumeros(event)", @onpaste = "return false" } })
                                </div>
                            </div>

                            <div class="form-group form-material">
                                @Html.Label("Description", "Description", htmlAttributes: new { @class = "control-label col-sm-2" })
                                <div class="col-sm-2" style="width:550px;height:100px">
                                    @Html.TextAreaFor(model => model.Item.description, new {style = "width:612px;height: 120px", htmlAttributes = new
                                   {
                                       @class = "form-control",
                                       @placeholder = "Description",
                                       @onkeypress = "return soloLetras(event)",
                                       @onpaste = "return false"
                                   }})
                                </div>
                            </div>
                            <br />
                            <div class="form-group form-material">
                                <div class="col-sm-9 col-sm-offset-4">
                                    <button type="submit" class="btn btn-primary" onclick="return grabarSection();">Save </button>
                                    <button type="button" class="btn btn-warning" data-dissmiss="modal">Cancel</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    (function () {
        iniciarEditar();
    })();
</script>