@model Call.Cloud.Mvc.Models.AgentVM.ListaAgentVm
@{
    ViewBag.Title = "Grid";
    Layout = "";
}
<div class="page animsition" style="animation-duration: 800ms; opacity: 1;">
    <div class="page-header">
        <strong>List of Agent</strong>
       
        <div class="page-header-actions">
            <button type="button" class="btn btn-sm btn-icon btn-primary btn-round" title="Nuevo" data-toggle="modal" data-target="#ModalAgent"
                    data-original-title="Nuevo" data-id="-1">
                <i class="icon md-sign-in" aria-hidden="true"></i>
            </button>
        </div>

    </div>
    <div class="panel-body">
        <div id="divGridPagina" class="table-responsive">
            @Html.Hidden("items_count", Model.Elementos.Count())
            <table class="table table-striped table-condensed text-center">
                <tr>
                    <th class="text-center col-sm-3">
                        <a class="punteroMouse">First Name</a>
                    </th>
                    <th class="text-center col-sm-3">
                        <a class="punteroMouse">Last Name</a>
                    </th>
                    <th class="text-center col-sm-2">
                        <a class="punteroMouse">Bussines</a>
                    </th>
                    <th class="text-center col-sm-3">
                        <a class="punteroMouse">DNI</a>
                    </th>
                    <th class="text-right col-sm-1">Acciones</th>
                </tr>

                @for (var i = 0; i < Model.Elementos.Count(); i++)
                {
                    var item = Model.Elementos.ToList()[i];
                    <tr>
                        <td class="text-center col-sm-1">@item.FirstName</td>
                        <td class="text-center col-sm-2">@item.LastName</td>
                        <td class="text-center col-sm-2">@item.NameBussines</td>
                        <td class="text-center col-sm-1">@item.Dni</td>
                        <td class="text-right col-sm-1">
                            <a class="btn btn-sm btn-icon btn-primary btn-round" title="Editar" data-toggle="modal" data-original-title="Editar" data-target="#ModalAgent" data-id="@item.PkAgent">
                                <i class="icon md-edit" aria-hidden="true"></i>
                            </a>

                            <a class="btn btn-sm btn-icon btn-primary btn-round" title="Eliminar" onclick="eliminar(@item.PkAgent);" data-toggle="tooltip"
                               data-original-title="Eliminar">
                                <i class="icon md-delete" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/Scripts/usados/agents.js"></script>
<script>
    (function () {
        iniciar();
    })();
</script>