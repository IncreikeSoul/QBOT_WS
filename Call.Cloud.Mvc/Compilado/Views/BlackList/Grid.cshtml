@model Call.Cloud.Mvc.Models.BlackListVM.ListaBlakListVm
@{
    ViewBag.Title = "Grid";
    Layout = "";
}

<div class="page animsition" style="animation-duration: 800ms; opacity: 1;">
    <div class="page-header">
                
        <div class="page-header-actions">
            <button type="button" class="btn btn-sm btn-icon btn-primary btn-round" data-toggle="modal"
                    data-original-title="Nuevo" title="Nuevo" data-target="#ModalBlackList" data-id="-1">
                <i class="icon md-sign-in" aria-hidden="true"></i>
            </button>
        </div>

    </div>
    <div class="panel-body">
        <div id="divGridPagina" class="table-responsive">
            @Html.Hidden("items_count", Model.Elementos.Count())
            <table class="table table-striped table-condensed text-center">
                <tr>
                    
                    <th class="text-center col-sm-2">
                        <a class="punteroMouse">Word</a>
                    </th>
                    <th class="text-center col-sm-3">
                        <a class="punteroMouse">Enterprise</a>
                    </th>
                    <th class="text-right col-sm-1">Options</th>
                </tr>

                @for (var i = 0; i < Model.Elementos.Count(); i++)
                {
                    var item = Model.Elementos.ToList()[i];
                    <tr>
                        <td class="text-center col-sm-2">@item.word</td>
                        <td class="text-center col-sm-2">@item.enterPrise</td>
                        <td class="text-right col-sm-1">
                            <a class="btn btn-sm btn-icon btn-primary btn-round" title="Editar" 
							data-toggle="modal" data-original-title="Editar" data-target="#ModalBlackList" data-id="@item.pk">
                                <i class="icon md-edit" aria-hidden="true"></i>
                            </a>

                            <a class="btn btn-sm btn-icon btn-primary btn-round" title="Eliminar" onclick="eliminar('@item.pk')" data-toggle="tooltip"
                               data-original-title="Eliminar">
                                <i class="icon md-delete" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
