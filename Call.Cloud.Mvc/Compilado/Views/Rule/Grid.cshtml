@model Call.Cloud.Mvc.Models.RuleVM.ListaRuleVm
@{
    ViewBag.Title = "Grid";
    Layout = "";
}

<div class="page animsition" style="animation-duration: 800ms; opacity: 1;">
    <div class="page-header">
        <strong>List of Rule</strong>
        <div class="page-header-actions">
            <button type="button" class="btn btn-sm btn-icon btn-primary btn-round" data-toggle="modal"
                    data-original-title="Nuevo" data-target="#ModalRule" data-id="-1">
                <i class="icon md-sign-in" aria-hidden="true"></i>
            </button>
        </div>
    </div>
    <div class="panel-body">
        <div id="divGridPagina" class="table-responsive">
            @Html.Hidden("items_count", Model.Elementos.Count())
            <table class="table table-striped table-condensed text-center">
                <tr>
                    <th class="text-center col-sm-3">
                        <a class="punteroMouse">Name</a>
                    </th>
                    <th class="text-center col-sm-3">
                        <a class="punteroMouse">Section</a>
                    </th>
                    <th class="text-center col-sm-3">
                        <a class="punteroMouse">Time Rule</a>
                    </th>
                    <th class="text-center col-sm-3">
                        <a class="punteroMouse">Weight</a>
                    </th>
                    <th class="text-right col-sm-1">Option</th>
                </tr>

                @for (var i = 0; i < Model.Elementos.Count(); i++)
                {
                    var item = Model.Elementos.ToList()[i];
                    <tr>
                        <td class="text-center col-sm-1">@item.NameRule</td>
                        <td class="text-center col-sm-2">@item.SeccionName</td>
                        <td class="text-center col-sm-1">@item.TimeRule</td>
                        <td class="text-center col-sm-1">@item.wieght</td>
                        <td class="text-right col-sm-1">
                            <a class="btn btn-sm btn-icon btn-primary btn-round" title="Editar" data-toggle="modal" data-original-title="Editar" data-target="#ModalRule" data-id="@item.PkRule">
                                <i class="icon md-edit" aria-hidden="true"></i>
                            </a>
                            <a class="btn btn-sm btn-icon btn-primary btn-round" title="Eliminar" onclick="eliminar('@item.PkRule')" data-toggle="tooltip"
                               data-original-title="Eliminar">
                                <i class="icon md-delete" aria-hidden="true"></i>
                            </a>
                            @Html.ActionLink(" ", "Index", "WordRule", new { id = item.PkRule }, new { @class = "icon wb-list", @title = "Word Rule" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>