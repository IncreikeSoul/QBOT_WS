@model Call.Cloud.Mvc.Models.SpeechVM.ListaSpeechVm
@{
    ViewBag.Title = "Grid";
    Layout = "";
}

<div class="page animsition" style="animation-duration: 800ms; opacity: 1;">
    <div class="page-header">
        <div class="row">
                <div class="form-horizontal">                   
                </div>
            </div>
        <div class="page-header-actions">


            @*ventana modal (popup)*@
            <button type="button" class="btn btn-sm btn-icon btn-primary btn-round" data-toggle="modal"
                    data-original-title="Nuevo" title="Nuevo" data-target="#ModalSpeech" data-id="-1">
                <i class="icon md-sign-in" aria-hidden="true"></i>
            </button>


        </div>

    </div>
    <div class="panel-body">
        <div id="divGridPagina" class="table-responsive">
            @Html.Hidden("items_count", Model.Elementos.Count())
            <table class="table table-striped table-condensed text-center">
                <tr>
                    <th class="text-center col-sm-3">
                        <a class="punteroMouse">Name</a>
                    </th>
                    <th class="text-center col-sm-3">
                        <a class="punteroMouse">Description</a>
                    </th>
                    <th class="text-center col-sm-2">
                        <a class="punteroMouse">Business</a>
                    </th>
                    <th class="text-right col-sm-1">Option</th>
                </tr>

                @for (var i = 0; i < Model.Elementos.Count(); i++)
                {
                    var item = Model.Elementos.ToList()[i];
                    <tr>
                        <td style="text-align: justify;" class="text-center col-sm-1">@item.SpeechName</td>
                        <td style="text-align: justify;">@item.Description</td>
                        <td class="text-center col-sm-2">@item.nameBusiness</td>
                        <td class="text-right col-sm-1">
                            <a class="btn btn-sm btn-icon btn-primary btn-round" title="Editar" data-toggle="modal" data-original-title="Editar" 
                               data-target="#ModalSpeech" data-id="@item.PkSpeech">
                                <i class="icon md-edit" aria-hidden="true"></i>
                            </a>
                            <a class="btn btn-sm btn-icon btn-primary btn-round" title="Eliminar" onclick="eliminar('@item.PkSpeech')" data-toggle="tooltip"
                               data-original-title="Eliminar">
                                <i class="icon md-delete" aria-hidden="true"></i>
                            </a>
                            @Html.ActionLink(" ", "SectionBySpeech", new { id = item.PkSpeech, name = item.SpeechName, estado=item.Status }, new { @class = "icon wb-list" })
                        </td>
                        @{ 
                            Session["SpeechName"] = item.SpeechName;
                            Session["Estado"] = item.Status;

                        }
                    </tr>
                            }

            </table>
        </div>
    </div>
</div>