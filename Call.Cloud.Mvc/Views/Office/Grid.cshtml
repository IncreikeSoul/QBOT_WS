@model Call.Cloud.Mvc.Models.OfficeVM.ListaOfficeVm
@{
    ViewBag.Title = "Grid";
    Layout = "";
}
<div>
    <div class="panel-body">
        <div id="divGridPagina" class="table-responsive">
            @Html.Hidden("items_count", Model.Elementos.Count())
            <table class="table table-striped table-condensed text-center">
                <tr>
                    <th>
                        <a class="punteroMouse">Pk Office</a>
                    </th>
                    <th>
                        <a class="punteroMouse">Name Office</a>
                    </th>
                    <th>
                        <a class="punteroMouse">Name Enterprise</a>
                    </th>
    
                    <th>Acciones</th>
                </tr>

                @for (var i = 0; i < Model.Elementos.Count(); i++)
                {
                    var item = Model.Elementos.ToList()[i];
                    <tr>
                        <td>@item.PkOffice</td>
                        <td>@item.nameOffice</td>
                        <td>@item.Name</td>
                       
                        <td class="text-right col-sm-1">
                            <a class="btn btn-sm btn-icon btn-primary btn-round" title="Editar" data-toggle="modal" data-original-title="Editar" data-target="#ModalOffice" data-id="@item.PkOffice">
                                <i class="fal fa-edit" aria-hidden="true"></i>
                            </a>

                            <a class="btn btn-sm btn-icon btn-primary btn-round" title="Eliminar" onclick="eliminar(@item.PkOffice);" data-toggle="tooltip"
                               data-original-title="Eliminar">
                                <i class="fal fa-eraser" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
<script>
    (function () {
        iniciar();
    })();
</script>

