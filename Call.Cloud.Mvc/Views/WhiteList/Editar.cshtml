@model Call.Cloud.Mvc.Models.WhiteListVM.EditarWhiteList
@{ 
    ViewBag.Title = "WhiteList";
    Layout = "";
}

<div class="col-sm-12">
    <div class="example-wrap">
        @*<p>
            @ViewBag.Title
        </p>*@
        @using (@Html.BeginForm("Editar", "WhiteList", FormMethod.Post, new { @class = "form-horizontal", role="form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Item.pk_word)
            <div class="form-group">
                @Html.Label("Word", "Word", htmlAttributes : new { @class = "control-label"})
                <div>
                    @Html.EditorFor(model => model.Item.word, new { htmlAttributes = new { @class = "form-control", @placeholder = "Word", @maxlenght="200", @onkeypress = "return soloLetras(event)", @onpaste = "return false"} })
                </div>
                @Html.Label("Percentage", "Percentage", htmlAttributes: new { @class = "control-label"})
                <div>
                    @Html.EditorFor(model => model.Item.porcentaje, new { htmlAttributes = new { @class = "form-control", @placeholder= "Percentage", @onkeypress = "return soloNumeros(event)", @onpaste="return false" } })
                </div>
                @Html.Label("Enterprise", "Enterprise", htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.DropDownListFor(model => model.Item.PkenterPrise, Model.PKEnterprise, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div>
                    <button type="submit" id="btnGrabar" class="btn btn-primary" onclick="return grabar();">Save </button>
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        }
    </div>
</div>

<script>
    (function () {
        iniciarEditar();
    })();
</script>