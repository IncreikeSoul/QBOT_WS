@model Call.Cloud.Mvc.Models.AudioVM.AudioTexto

@{
    ViewBag.Title = "Transcripcion";
    Layout = "~/Views/Shared/_Theme.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="modal-title">TRANSCRIPTAR AUDIO</h4>
        <hr />
        <div class="container">
            <div class="form-group">
                <label for="txtNombreDesc">Nombre / Descripcion</label>
                <input type="text" class="form-control" id="txtNombreDesc" required>
            </div>
            <div class="form-group">
                <label for="txtArchivo">Example file input</label>
                <input type="file" class="form-control-file" id="txtArchivo" required>
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-warning" id="btnTranscriptar">
                    <i class="fal fa-box-check"></i> Ejecutar
                </button>
            </div>
        </div>

        <hr />

        <div class="form-group">
            <label for="txtResultado">Resultado:</label>
            <textarea class="form-control" id="txtResultado" rows="6" readonly></textarea>
        </div>

    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section scripts{
    <script src="~/Scripts/Views/Audio/Transcripcion.js"></script>
}