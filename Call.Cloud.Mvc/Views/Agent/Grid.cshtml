@model Call.Cloud.Mvc.Models.AgentVM.ListaAgentVm
@{
    ViewBag.Title = "Grid";
    Layout = "";
}
<div id="divGridPagina" class="table-responsive">
    @Html.Hidden("items_count", Model.Elementos.Count())
    <table class="table table-striped table-condensed text-center">
        <tr>
            <th>
                <a class="punteroMouse">First Name</a>
            </th>
            <th>
                <a class="punteroMouse">Last Name</a>
            </th>
            <th>
                <a class="punteroMouse">Bussines</a>
            </th>
            <th>
                <a class="punteroMouse">DNI</a>
            </th>
            <th>Acciones</th>
        </tr>

        @for (var i = 0; i < Model.Elementos.Count(); i++)
        {
            var item = Model.Elementos.ToList()[i];
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.NameBussines</td>
                <td>@item.Dni</td>
                <td>
                    <a class="btn btn-sm btn-icon btn-primary btn-round" title="Editar" data-toggle="modal" data-original-title="Editar" data-target="#ModalAgent" data-id="@item.PkAgent">
                        <i class="fal fa-edit" aria-hidden="true"></i>
                    </a>

                    <a class="btn btn-sm btn-icon btn-primary btn-round" title="Eliminar" onclick="eliminar(@item.PkAgent);" data-toggle="tooltip"
                       data-original-title="Eliminar">
                        <i class="fal fa-eraser" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        }

    </table>
</div>

@section scripts{
    <script type="text/javascript" src="~/Scripts/usados/agents.js"></script>
    <script>
        (function () {
            iniciar();
        })();
    </script>
}