@model Call.Cloud.Mvc.Models.RuleVM.ListaRuleVm
@{
    ViewBag.Title = "Grid";
    Layout = "";
}
<div>
    <div class="panel-body">
        <div id="divGridPagina" class="table-responsive">
            @Html.Hidden("items_count", Model.Elementos.Count())
            <table class="table table-striped table-condensed text-center">
                <tr>
                    <th>
                        <a class="punteroMouse">Name</a>
                    </th>
                    <th>
                        <a class="punteroMouse">Section</a>
                    </th>
                    <th>
                        <a class="punteroMouse">Time Rule</a>
                    </th>
                    <th>
                        <a class="punteroMouse">Weight</a>
                    </th>
                    <th>Acciones</th>
                </tr>

                @for (var i = 0; i < Model.Elementos.Count(); i++)
                {
                    var item = Model.Elementos.ToList()[i];
                    <tr>
                        <td>@item.NameRule</td>
                        <td>@item.SeccionName</td>
                        <td>@item.TimeRule</td>
                        <td>@item.wieght</td>
                        <td>
                            <a class="btn btn-sm btn-icon btn-primary btn-round" title="Editar" data-toggle="modal" data-original-title="Editar" data-target="#ModalRule" data-id="@item.PkRule">
                                <i class="fal fa-edit" aria-hidden="true"></i>
                            </a>
                            <a class="btn btn-sm btn-icon btn-primary btn-round" title="Eliminar" onclick="eliminar('@item.PkRule')" data-toggle="tooltip"
                               data-original-title="Eliminar">
                                <i class="fal fa-eraser" aria-hidden="true"></i>
                            </a>
                            @Html.ActionLink(" ", "Index", "WordRule", new { id = item.PkRule }, new { @class = "icon wb-list", @title = "Word Rule" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>