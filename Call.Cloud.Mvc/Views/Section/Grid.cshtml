@model Call.Cloud.Mvc.Models.SectionVM.ListaSectionVm
@{
    ViewBag.Title = "Grid";
    Layout = "";
}

<div>
    <div class="panel-body">
        <div id="divGridPagina" class="table-responsive">
            @Html.Hidden("items_count", Model.Elementos.Count())
            <table class="table table-striped table-condensed text-center">
                <tr>
                    <th>
                        <a class="punteroMouse">Section</a>
                    </th>
                    <th>
                        <a class="punteroMouse">Speech</a>
                    </th>
                    <th>
                        <a class="punteroMouse">Description</a>
                    </th>
                    <th>
                        <a class="punteroMouse">Weight</a>
                    </th>
                    <th>
                        <a class="punteroMouse">TMO</a>
                    </th>
                    <th>Option</th>
                </tr>

                @for (var i = 0; i < Model.Elementos.Count(); i++)
                {
                    var item = Model.Elementos.ToList()[i];
                    <tr>
                        <td>@item.SectionName</td>
                        <td>@item.SpeechName</td>
                        <td>@item.description</td>
                        <td>@item.Weight</td>
                        <td>@item.TMO</td>
                        <td>

                            <a class="btn btn-sm btn-icon btn-primary btn-round" title="Editar" data-toggle="modal" data-original-title="Editar" data-target="#ModalSection" data-id="@item.PkSection">
                                <i class="fal fa-edit" aria-hidden="true"></i>
                            </a>
                            <a class="btn btn-sm btn-icon btn-primary btn-round" title="Eliminar" onclick="eliminar('@item.PkSection')" data-toggle="tooltip"
                               data-original-title="Eliminar">
                                <i class="fal fa-eraser" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>