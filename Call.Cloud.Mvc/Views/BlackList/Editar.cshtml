@model Call.Cloud.Mvc.Models.BlackListVM.EditarBlackListVm
@{
    ViewBag.Title = "BlackList";
    Layout = "";
}

<div class="col-sm-12">
    <div class="example-wrap">
        @*<p>
            @ViewBag.Title
        </p>*@
        @using (@Html.BeginForm("Editar", "BlackList", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Item.pk)

            <div class="form-group">
                @Html.Label("Word", "Word", htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Item.word, new { htmlAttributes = new { @class = "form-control", @placeholder = "Word", @onkeypress = "return soloLetras(event)", @onpaste = "return false" } })
                </div>
                @Html.Label("Enterprise", "Enterprise", htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.DropDownListFor(model => model.Item.PkenterPrise, Model.PKEnterprise, new { @class = "form-control" })
                </div>
            </div>
                            
            <div class="form-group">
                <div>
                    <button type="submit" class="btn btn-primary" onclick="return grabar();">Save </button>
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        }
    </div>
</div>

<script>
    (function () {
        iniciarEditar();
    })();
</script>

